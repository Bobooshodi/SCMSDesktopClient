                <ColumnDefinition Width="auto"></ColumnDefinition>
                <ColumnDefinition Width="auto"></ColumnDefinition>
            </Grid.ColumnDefinitions>

            <TextBlock FontSize="20" FontWeight="Thin" VerticalAlignment="Center">Cardholders</TextBlock>

            <TextBox Grid.Column="1" Style="{StaticResource FlatTextBox}"></TextBox>

            <ComboBox Grid.Column="2" Style="{StaticResource ComboBox}" >
                <ComboBoxItem>Coporate Tenant</ComboBoxItem>
                <ComboBoxItem>Coporate Tenant</ComboBoxItem>
                <ComboBoxItem>Coporate Tenant</ComboBoxItem>
            </ComboBox>

            <Button Grid.Column="3" Template="{StaticResource ButtonPrimary}">Create New Cardholder</Button>
        </Grid>





        <!-- MAIN SECTION -->
        <Border Grid.Row="3" Style="{StaticResource main_section}" >

            <!-- GRID HEADER HERE -->

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"></RowDefinition>
                    <RowDefinition></RowDefinition>
                </Grid.RowDefinitions>

                <Grid>
                    <Border BorderBrush="#FFE2E3E4" BorderThickness="0 0 0 1" Background="#394758" CornerRadius="3 3 0 0">


                        <Grid VerticalAlignment="Top" Margin="20 10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"></ColumnDefinition>
                                <ColumnDefinition Width="*"></ColumnDefinition>
                                <ColumnDefinition Width="182"></ColumnDefinition>
                                <ColumnDefinition Width="*"></ColumnDefinition>
                                <ColumnDefinition Width="auto"></ColumnDefinition>
                                <ColumnDefinition Width="auto"></ColumnDefinition>


                            </Grid.ColumnDefinitions>

                            <Border Grid.Column="0" Style="{StaticResource GridColumn}">
                                <TextBlock Style="{StaticResource GridHeaderColumn}">Cardholder</TextBlock>
                            </Border>

                            <Border Grid.Column="1" Style="{StaticResource GridColumn}">
                                <TextBlock Style="{StaticResource GridHeaderColumn}">ID Number</TextBlock>
                            </Border>

                            <Border Grid.Column="2" Style="{StaticResource GridColumn}">
                                <TextBlock Style="{StaticResource GridHeaderColumn}">Active</TextBlock>
                            </Border>

                            <Border Grid.Column="3" Style="{StaticResource GridColumn}">
                                <TextBlock Style="{StaticResource GridHeaderColumn}">User Type</TextBlock>
                            </Border>

                            <Border Grid.Column="4" Style="{StaticResource GridColumn}">

